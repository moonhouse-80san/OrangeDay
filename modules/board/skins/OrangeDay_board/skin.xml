			<title xml:lang="ko">읽기 페이지 설정</title>
			<var name="read_location" type="radio">
				<title xml:lang="ko">현재 위치 바</title>
				<options value="use">
					<title xml:lang="ko">보기</title>
				</options>
				<options value="no_use">
					<title xml:lang="ko">감추기</title>
				</options>
			</var>
			<var name="read_title" type="radio">
				<title xml:lang="ko">제목</title>
				<options value="use">
					<title xml:lang="ko">보기</title>
				</options>
				<options value="no_use">
					<title xml:lang="ko">감추기</title>
